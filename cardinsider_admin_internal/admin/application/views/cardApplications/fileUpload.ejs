<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../common/commonHeader'); %>

</head>

<body>

    <div class="app align-content-stretch d-flex flex-wrap">
        <%- include('../common/commonSidebar' , {sidebarData : sidebarDataByServer}); %>
            <div class="app-container">
                <div class="loader-show" id="loader">
                    <div class="sbl-circ-path loader-content"></div>
                </div>

                <div class="app-content">
                    <h1 class="application-title">Application Form</h1>
                    <hr />
                    <div class="content-wrapper">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">

                                        <div class="card-body">

                                            <div class="app-form px-5">
                                                <div class="row justify-content-around">
                                                    <div class="col-6">
                                                        <select required class="form-select" id="card-issuers-here"
                                                            aria-label="Default select example"
                                                            onchange=" FILEUPLOADDATA.getCreditCardsByIssuers()">

                                                            <option selected>Select Card Issuer</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-6">
                                                        <input type="number"  min="0" class="form-control" id="cashBackNum"
                                                            aria-describedby="cashBackHelp">
                                                        <div id="cashBackHelp" class="form-text">Enter the cashBack for card Applications in number.</div>
                                                    </div>

                                                </div>
                                                <div class="row mx-auto my-3">
                                                    <div class="py-5" style="text-align: center;">

                                                        <form action="/upload" class="" id="demo-upload">
                                                            <div class="choose-file" style="display: inline-block;">
                                                                <input type="file" id="fileUpload" />
                                                            </div>

                                                            <div class="upload btn" style="display: inline-block;">
                                                                <input type="button" id="upload" value="Upload" />
                                                            </div>
                                                            <br>
                                                            <p class="file-note"></p>
                                                        </form>
                                                    </div>

                                                </div>


                                                <!-- <div class="col-6" style="padding-left: 40px;">
                                                        <select required class="form-select" id="card-issuers-here"
                                                            aria-label="Default select example"
                                                            onchange=" FILEUPLOADDATA.getCreditCardsByIssuers()">

                                                            <option selected>Select Card Issuer</option>
                                                        </select>
                                                    </div> -->





                                                <div class="upload-card-list">
                                                    <h3>Application for new Card</h3>
                                                </div>
                                                <div class="row justify-content-around">
                                                    <div class="col-12">

                                                        <table class="table ">
                                                            <thead id="theading">
                                                                <tr>
                                                                    <th scope="col">Card By File</th>
                                                                    <th scope="col">Select Issuer Card</th>
                                                                    <th scope="col">Cashback</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody class="table-body" id="js-new-card-table">

                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-12">
                                                    <button type="button" onclick="FILEUPLOADDATA.submitDataToDb()"
                                                        class="submit btn btn-primary">Submit</button>
                                                </div>

                                                <!-- <hr /> -->
                                                <div id="dvExcel"></div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Javascripts -->
                <script src="./admin/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
                <script src="./admin/assets/plugins/bootstrap/js/popper.min.js"></script>
                <script src="./admin/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
                <script src="./admin/assets/plugins/perfectscroll/perfect-scrollbar.min.js"></script>
                <script src="./admin/assets/plugins/pace/pace.min.js"></script>
                <script src="./admin/assets/plugins/highlight/highlight.pack.js"></script>
                <script src="./admin/assets/plugins/dropzone/min/dropzone.min.js"></script>
                <script src="./admin/assets/js/main.min.js"></script>
                <script src="./admin/assets/js/custom.js"></script>
                <script src="/./admin/assets/js/fileUpload.js"></script>
</body>

</html>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/xlsx.full.min.js"></script>
