    <div class="app align-content-stretch d-flex flex-wrap">
        <%- include('../../common/sidebar.ejs'); %>
                <div class="app-container">
                    <div class="app-content">
                        <div class="content-wrapper">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col">
                                        <div class="app-content">
                                            <h1 class="application-title  bold">
                                                Add a Offer
                                            </h1>
                                            <div class="top-btns">
                                                <!-- <button class="ci-btn ci-btn-red d-none" data-bs-toggle="modal" data-bs-target="#deleteModal" >Delete</button> -->
                                                <button class="ci-btn" id="publish" data-bs-toggle="modal" data-bs-target="#publishModal" onclick="addAOffer() ">Publish</button>
